<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_gemini_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.gemini.view.form.inherit.hr.recruitment</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_recruitment.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!--
                This XPath targets the block containing the default 'recruitment_extract_settings'
                (for Odoo Enterprise's IAP feature) and inserts our new
                Gemini settings block right after it.
            -->
            <xpath expr="//setting[@id='recruitment_extract_settings']" position="after">
                <setting id="gemini_extract_settings" string="CV Data Extraction (Gemini)" company_dependent="1" help="Automatically extract data from CVs using Gemini.">
                    <div class="o_setting_right_pane">
                        <label for="gemini_cv_extract_mode"/>
                        <div class="text-muted">
                            Select how CV attachments are sent for extraction.
                        </div>
                        <div class="mt16">
                            <field name="gemini_cv_extract_mode" class="o_light_label" widget="radio" required="True"/>
                        </div>
                        <div class="mt16" invisible="gemini_cv_extract_mode == 'no_send'">
                            <label for="gemini_api_key" class="o_form_label"/>
                            <field name="gemini_api_key" widget="password" placeholder="AIzaSy..."/>
                        </div>
                        <div class="mt16" invisible="gemini_cv_extract_mode == 'no_send'">
                            <label for="gemini_model" class="o_form_label"/>
                            <field name="gemini_model" required="True"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>