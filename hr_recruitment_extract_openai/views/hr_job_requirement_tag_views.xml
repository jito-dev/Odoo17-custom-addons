<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_job_requirement_tag_view_tree" model="ir.ui.view">
        <field name="name">hr.job.requirement.tag.tree</field>
        <field name="model">hr.job.requirement.tag</field>
        <field name="arch" type="xml">
            <tree string="Job Requirement Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="hr_job_requirement_tag_action" model="ir.actions.act_window">
        <field name="name">Job Requirement Tags</field>
        <field name="res_model">hr.job.requirement.tag</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="hr_job_requirement_tag_menu"
        name="Requirement Tags"
        action="hr_job_requirement_tag_action"
        parent="hr_recruitment.menu_hr_recruitment_configuration"
        sequence="20"/>
</odoo>